<!doctype html>
<html lang="es">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">

    <title>TerraCerberus</title>
  </head>
  <body>
    <div class="container-fluid">
        <div class="row">
            <% ['Agamenón', 'Skywalkers'].forEach((terrario) => { %>
                <div class="container col">
                    <div class="card">
                        <div class="card-header">
                            <h3><%= terrario %></h3>
                        </div>
                        <div class="card-body">
                            <div class="card-title">
                                <h4>Temperatura</h4>
                            </div>
                            <div class="card-text">
                                Las temperaturas.
                            </div>
                        </div>
                        <div class="card-body container">
                            <div class="row">
                                <div class="col">
                                    <div class="card-title">
                                        <h4>Control temperatura</h4>
                                    </div>
                                    <div class="card-text">
                                        <div class="button-group" role="group">
                                            <button type="button" class="btn btn-success">On</button>
                                            <button type="button" class="btn btn-danger disabled">Off</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="card-title">
                                        <h4>Control iluminación</h4>
                                    </div>
                                    <div class="card-text">
                                        <div class="button-group" role="group">
                                            <button type="button" class="btn btn-success">On</button>
                                            <button type="button" class="btn btn-danger disabled">Off</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="card-title">
                                <h4>Programación</h4>
                            </div>
                            <div class="card-text">
                                    <form>
                                        <div class="form-group row">
                                            <label for="horainicio" class="col col-form-label">Hora inicio</label>
                                            <div class="col">
                                                <input type="time" class="form-control" id="horainicio">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="horafin" class="col col-form-label">Hora fin</label>
                                            <div class="col">
                                                <input type="time" class="form-control" id="horafin">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="pulverizaciones"class="col col-form-label" >Pulverizaciones (veces - tiempo)</label>
                                            <div class="col">
                                                <input type="number" class="form-control" id="pulverizaciones">
                                            </div>
                                            <div class="col">
                                                <input type="number" class="form-control" id="pulverizaciones">
                                            </div>
                                        </div>
                                    </form>
                            </div>
                        </div>
                    </div>
                </div>
            <% })  %>
        </div>
    </div>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js" integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js" integrity="sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm" crossorigin="anonymous"></script>
  </body>
</html>